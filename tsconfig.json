{
  "compilerOptions": {
    "target": "ES2023",
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./tasks",
    "sourceMap": true,
    "declaration": true,
    "resolveJsonModule": true
  },
  "include": ["tasks/**/*"],
  "exclude": ["node_modules"]
}
